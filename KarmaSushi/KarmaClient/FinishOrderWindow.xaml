<Window x:Class="KarmaClient.FinishOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KarmaClient"
        mc:Ignorable="d"
        Title="FinishOrderWindow" Height="600" Width="600">

    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Background="#FF1F1F20">
            <Label FontSize="20">Employee:</Label>
            <ComboBox x:Name="EmployeeComboBox">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </StackPanel>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <ListBox Grid.Column="0">

            </ListBox>
            <ListBox Grid.Column="2">

            </ListBox>
        </Grid>
    </DockPanel>
</Window>
